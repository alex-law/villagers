{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port",
                "5000"
            ],
            "jinja": true
        },
        {
            "name": "Launch Chrome against localhost",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:5000", // Ensure this matches the Flask app's URL
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "breakpoints": "all"
        }
    ],
    "compounds": [
        {
            "name": "Flask + Chrome Debug",
            "configurations": ["Python: Flask", "Launch Chrome against localhost"]
        }
    ]
}
